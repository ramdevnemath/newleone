  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.5/dist/sweetalert2.min.css">

  <%- include('../partials/admin/adminHeader.ejs') %>
  <h2 style="text-align: center; color: #567086; margin-top: 10px;">USER MANAGEMENT</h2>
  <section>
    <!-- <div class="container">
        <div class="row" style="float: right">
            <a href="#" class="btn btn-success m-3" style="width: fit-content">Export</a>
        </div> -->

    <table class="table table-striped mt-5" id="tableid">
      <thead style="background-color: rgb(65, 87, 108);">
        <tr>
          <th scope="col">No</th>

          <th scope="col">Name</th>

          <th scope="col">Email</th>

          <th scope="col">Phone</th>

          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        <% userList.forEach((item,index)=> { %>
          <tr>
            <td>
              <%= index+1 %>
            </td>
            <td>
              <%= item.name %>
            </td>
            <td>
              <%= item.email %>
            </td>
            <td>
              <%= item.mobile %>
            </td>
            <td>

              <% if (item.isActive) { %>
                <a class="btn btn-outline-danger" href="/admin/block/<%= item._id %>"
                  onclick="showAlert('block')">Block</a>
                <% } else { %>
                  <a class="btn btn-outline-success" href="/admin/unBlock/<%= item._id %>"
                    onclick="showAlert('unblock')">Unblock</a>
                  <% } %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
</div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.5/dist/sweetalert2.all.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script>
  $(document).ready(function () {
    $("#tableid").DataTable();
  });

  function showAlert(action) {
    if (action === 'block') {
      Swal.fire({
        title: 'Success',
        text: 'User blocked successfully!',
        icon: 'success',
        toast: true,
        position: 'top',
        showConfirmButton: false,
        timer: 20000, // Adjust the timer value as needed
        showClass: {
          popup: '', // Empty string to remove show animation or transition
          backdrop: '' // Empty string to remove show animation or transition for the backdrop
        },
        hideClass: {
          popup: '', // Empty string to remove hide animation or transition
          backdrop: '' // Empty string to remove hide animation or transition for the backdrop
        }
      });
    } else if (action === 'unblock') {
      Swal.fire({
        title: 'Success',
        text: 'User unblocked successfully!',
        icon: 'success',
        toast: true,
        position: 'top',
        showConfirmButton: false,
        timer: 20000, // Adjust the timer value as needed
        showClass: {
          popup: '', // Empty string to remove show animation or transition
          backdrop: '' // Empty string to remove show animation or transition for the backdrop
        },
        hideClass: {
          popup: '', // Empty string to remove hide animation or transition
          backdrop: '' // Empty string to remove hide animation or transition for the backdrop
        }
      });
    }
  }





</script>